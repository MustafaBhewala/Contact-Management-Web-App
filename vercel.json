{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/contacts/:path*",
      "destination": "/api/contacts"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/frontend/$1"
    }
  ]
}
